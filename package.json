{
  "name": "@lisk-builders/lisk-hd-key",
  "version": "2.0.0",
  "description": "HD key derivation for Lisk coin",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -p ./",
    "test:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test": "jest --watch --verbose"
  },
  "jest": {
    "verbose": true,
    "mapCoverage": true,
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "window": {},
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  },
  "keywords": [
    "ed25519",
    "bip32",
    "lisk",
    "lisk-elements",
    "crypto",
    "hdkeys",
    "hdwallet"
  ],
  "author": "Aleksey Popov",
  "license": "GPL-3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lisk-builders/lisk-hd-key.git"
  },
  "bugs": {
    "url": "https://github.com/lisk-builders/lisk-hd-key/issues"
  },
  "homepage": "https://github.com/lisk-builders/lisk-hd-key",
  "devDependencies": {
    "@types/jest": "21.1.8",
    "jest-cli": "21.1.0",
    "ts-jest": "21.2.4",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "@liskhq/lisk-cryptography": "^3.1.0",
    "@liskhq/lisk-transactions": "^5.1.1",
    "@types/node": "^10.0.3",
    "coveralls": "^3.0.1",
    "ed25519-hd-key": "^1.1.2"
  }
}
