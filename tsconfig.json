{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./src",
      "lib": [
        "es2017"
      ],
      "outDir": "./dist",
      "noImplicitAny": false,
      "sourceMap": false,
      "removeComments": true,
      "moduleResolution": "node",
      "declaration": true
    },
    "exclude": [
      "node_modules",
      "src/**/*.spec.*"
    ],
    "include": [
        "src/**/*"
    ]
  }